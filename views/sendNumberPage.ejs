    function deliveryNumberUpload() {
        var form = document.getElementById('go-detail');
        var checked = document.getElementById('delivery_check');
        checked.value = document.getElementById('dn_check').value;

        form.action = "/sendNumberPage";
        form.method =  "POST";
        form.submit();
    }
    function sendDetailBoard(id) {

        alert("hi :" + id);

        var form = document.getElementById('go-detail'); // form 객체 가져옴
        var setValue = document.getElementById("myValue"); // input 객체 가져옴
        setValue.value = id; // input value 에 id 값 설정

        form.action = "/detail_board";
        form.method =  "POST";
        form.submit();


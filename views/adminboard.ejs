                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>주문번호</th>
                                    <th>주문일시</th>
                                    <th>주문상태</th>
                                    <th>상품번호</th>
                                    <th>상품명</th>
                                    <th>옵션</th>
                                    <th>수량</th>
                                    <th>구매자명</th>
                                    <th>수취인명</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>주문번호</th>
                                    <th>주문일시</th>
                                    <th>주문상태</th>
                                    <th>상품번호</th>
                                    <th>상품명</th>
                                    <th>옵션</th>
                                    <th>수량</th>
                                    <th>구매자명</th>
                                    <th>수취인명</th>
                                </tr>
                                </tfoot>
                                <tbody>
                                <% if (!snapshot.empty) {%>
                                    <% snapshot.forEach( doc =>{ %>
                                        <!--데이터 반복시작-->
                                    <tr>
                                        <td type="text" >
                                            <a href="#" onclick="sendDetailBoard('<%= doc.id %>');"> <%= doc.data().orderNumber %>  </a> </td>
                                        <td> <%= doc.data().oderDate %></td>
                                        <td> <%= doc.data().productNumber %></td>
                                        <td> <%= doc.data().productName %></td>
                                        <% if( doc.data().orderStatus == '0') { %>
                                            <td> "새주문"</td>
                                        <% } else if (doc.data().ordeerStatus == '1') { %>
                                            <td> "발송중" </td>
                                        <% } %>
                                        <td> <%= doc.data().option %></td>
                                        <td> <%= doc.data().amount %></td>
                                        <td> <%= doc.data().oderer %></td>
                                        <td> <%= doc.data().receiver %></td>
                                        <% }); %>
                                    </tr>
                                <%} else {%>
                                    <tr>
                                        <td colspan="9" type="text">조희 가능한 새로운 주문이 없습니다</td>
                                    </tr>
                                <% }  %>
                                </tbody>
                            </table>

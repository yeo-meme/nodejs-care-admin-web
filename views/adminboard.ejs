                    <form role="form" id="go-detail" action="/detail_board" method="post" autocomplete="on">
                        <!--임시 저장소-->
                        <input type="hidden"  name="myValue" id="myValue" value=""/>
                    </form>

                    <form role="form" id="go-paging" method="post" autocomplete="on">
                        <input type="hidden" name="pageValue" id="pageValue" value=""/>
